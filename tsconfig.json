{
	"compilerOptions": {
	  "moduleResolution": "node",
	  "target": "es2020",
	  "module": "commonjs",
	  "lib": ["ES2020"],
	  "declaration": true,
	  "outDir": "dist",
	  "rootDir": "src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "node_modules", "test"]
  }
