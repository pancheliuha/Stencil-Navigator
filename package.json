{
  "name": "stencil-navigator",
  "displayName": "Stencil Navigator",
  "publisher": "ViktorPancheliuha",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pancheliuha/Stencil-Navigator.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "galleryBanner": {
    "color": "#0f4c81",
    "theme": "dark"
  },
  "_moduleAliases": {
    "vscode": "src/__mocks__/vscode.ts"
  },
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onCommand:stencilNavigator.reloadTags",
    "onCommand:stencilNavigator.generateData",
    "onCommand:stencilNavigator.welcome",
    "onCommand:stencilNavigator.findUsages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Stencil Navigator Configuration",
      "properties": {
        "stencilNavigator.dataSaveLocation": {
          "type": "string",
          "enum": ["projectRoot", "extensionStorage"],
          "default": "projectRoot",
          "description": "Where to save generated vscode-data.json"
        },
        "stencilNavigator.filePatterns": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["src/components/**/*.tsx", "src/**/*.tsx"],
          "description": "Glob patterns for files to scan for components."
        },
        "stencilNavigator.excludePatterns": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["node_modules/**", "dist/**"],
          "description": "Glob patterns of files/directories to exclude from scan."
        },
        "stencilNavigator.completionTriggers": {
          "type": "array",
          "items": { "type": "string" },
          "default": [" ", ":"],
          "description": "Characters that trigger attribute autocomplete"
        },
        "stencilNavigator.sortPrefix": {
          "type": "string",
          "default": "!",
          "description": "Prefix to force ordering in completion list"
        },
        "stencilNavigator.features.definition": {
          "type": "boolean",
          "default": true,
          "description": "Enable Go to Definition"
        },
        "stencilNavigator.features.links": {
          "type": "boolean",
          "default": true,
          "description": "Enable Document Links"
        },
        "stencilNavigator.features.hover": {
          "type": "boolean",
          "default": true,
          "description": "Enable Hover tooltips"
        },
        "stencilNavigator.features.completion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Props/Events/Slots autocomplete"
        },
        "stencilNavigator.features.methods": {
          "type": "boolean",
          "default": true,
          "description": "Enable `@Method()` autocomplete"
        },
        "stencilNavigator.features.slots": {
          "type": "boolean",
          "default": true,
          "description": "Enable `@Slot()` autocomplete"
        },
        "stencilNavigator.features.findUsages": {
          "type": "boolean",
          "default": true,
          "description": "Enable Find Usages CodeLens"
        },
        "stencilNavigator.features.welcomePanel": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome panel on first install"
        },
        "stencilNavigator.features.enterTrigger": {
          "type": "boolean",
          "default": false,
          "description": "Trigger autocomplete on Enter key"
        }
      }
    },
    "commands": [
      {
        "command": "stencilNavigator.reloadTags",
        "title": "Stencil Navigator: Reload Tags"
      },
      {
        "command": "stencilNavigator.generateData",
        "title": "Stencil Navigator: Generate Data"
      },
      {
        "command": "stencilNavigator.welcome",
        "title": "Stencil Navigator: Welcome"
      },
      {
        "command": "stencilNavigator.findUsages",
        "title": "Stencil Navigator: Find Usages"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "test:unit": "mocha -r module-alias/register -r ts-node/register \"src/**/*.test.ts\"",
    "test:e2e": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.0.0",
    "@types/sinon": "^10.0.4",
    "@types/vscode": "^1.99.0",
    "@vscode/test-electron": "^2.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.0",
    "module-alias": "^2.2.3",
    "sinon": "^11.1.2",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.2"
  }
}